{% block javascripts %}

    <script>

        $("#haWidget").on("load", function() {
            let head = $("#haWidget").contents().find("head");
            let css = "<style>.widget-footer, .notice-contribution{display: none !important;}</style>";
            $(head).append(css);
        });

    </script>

{% endblock %}
