{% block body %}

    <div class="myContainer mx-auto backgroundContainer m-4 pt-4 pl-4 pr-4">

        <div class="d-flex">
            <img src="{{ asset('/img/logoGBnoir.png') }}" alt="generationBoomerang logo" class="logoHeader pt-1 mx-auto">
