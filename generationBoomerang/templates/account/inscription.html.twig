                                    <option>Salarié</option>
                                    <option>Profession libérale</option>
                                    <option>Entrepreneur</option>
                                    <option>Retraite</option>
                                    <option>Chômage</option>
                                    <option>Etudiant</option>
                                </select>
                            </div>
                {# Entreprise #}
                            <div class="collapse" id="Entrepreneur">
                    {# Nom + activité #}
                                <div class="p-3 flex-column pl-5 pr-5">
                                    <h3 class="text-left font-weight-bold font-italic">ENTREPRISE</h3>
                                    <div class="d-flex ">
                                        <h4 class="text-left pb-4 font-weight-normal">Gérer les informations sur votre entreprise utilisées pour les annonces vis ma vie.</h4>
                                    </div>
                                    <div class="row mx-auto">
                                        <div class="col-6">  
                                            {{form_row(form.Entreprise.nom, {'label':'Nom de l\'entreprise','attr': {'placeholder': 'Saisir nom de l\'entreprise ...', 'class':"form-control"}})}}                        
                                        </div>                    
                                        <div class="col-6">  
                                            {{form_row(form.Entreprise.activite, {'label':'Activité principale','attr': {'placeholder': 'Saisir l\'activité principale ...', 'class':"form-control"}})}}                        
