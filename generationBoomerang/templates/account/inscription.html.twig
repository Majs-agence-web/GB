                        </div>

                        <div class="col-lg-8 col-md-10 col-sm-12 mx-auto my-3">
                            {{form_row(form.telephone, {'label':'Numéro de téléphone','attr': {'placeholder': 'Votre numéro de téléphone', 'class':"form-control", 'size':"10"}})}}
