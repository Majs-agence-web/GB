                                    <h5 class="text-left font-italic">ADRESSE DE L'ENTREPRISE</h5>
                                    <div class="row">
                                        <div class="col-3">
                                        {{form_row(form.Entreprise.Adresse.numeroRue, {'label':'N° ','attr': {'placeholder': 'Saisir n°...', 'class':"form-control", 'size':"10"}})}}
                                        </div>
                                        <div class="col-9">
                                        {{form_row(form.Entreprise.Adresse.nomRue, {'label':'Nom de la rue','attr': {'placeholder': 'Saisir nom de rue...', 'class':"form-control", 'size':"40"}})}}
                                        </div>
                                    </div>   
                                    <div class="row">
                                        <div class="col-3">
                                        {{form_row(form.Entreprise.Adresse.codePostal, {'label':'Code postal ','attr': {'placeholder': 'Saisir code postal...', 'class':"form-control", 'size':"10"}})}}
                                        </div>
                                        <div class="col-9">
                                        {{form_row(form.Entreprise.Adresse.ville, {'label':'Ville','attr': {'placeholder': 'Saisir votre ville...', 'class':"form-control", 'size':"40"}})}}
                                        </div>
                                    </div>  
                                    <div class="row">
                                        <div class="col-12">
                                        {{form_row(form.Entreprise.Adresse.region, {'label':'Région ','attr': {'placeholder': 'Saisir région...', 'class':"form-control", 'size':"40"}})}}
                                        </div>       
                                    </div>
                                </div>
                            </div>
                            <div class="collapse" id="Etudiant">
                                <div class="form-group">
                                    <label for="document">Document</label>
                                        {{ form_row(form.documents) }}
                                    
                                    {# <input id="document" type="file" class="form-control" name="document" placeholder="Veuillez uploader votre justificatif"> #}
                                </div>
                            </div>
                </div>
                <div class="checkbox pl-5  pt-5">
                    <label><input type="checkbox" value="" required> En vous inscrivant, vous affirmez avoir pris connainssance des <a target="_blank" href="/docs/Charte à l'inscription Génération Boomerang.pdf" style="color:rgb(244,69,6)">conditions générales</a></label>
                </div>
                </div>
                <div class="d-flex justify-content-center pb-5 pt-5 buttonFooter">
                            <button type="submit" class="btn " style="width:300px;">S'enregistrer</button>
                </div>

            {{form_end(form)}}
        </div>    
    </div>
