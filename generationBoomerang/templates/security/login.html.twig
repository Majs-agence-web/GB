{% extends 'base.html.twig' %}


{% block body %}
<div class="container backgroundContainer mt-5 mb-5 pt-5" >
    
        <div class="col-12 formulaireLogin">
            <form method="post">
                

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="d-flex">
                    <img src="{{ asset('/img/logoGBnoir.png') }}" alt="generationBoomerang logo" class="logoHeader pt-1 pb-5 mx-auto">
                 </div>
                {% if error %}
                    <div class="alert alert-danger">Une erreur est survenue, l'adresse mail ou le mot de passe est incorrect</div>
                {% endif %}
                <h3 class="h3 mb-3 mt-3">INFORMATIONS DE CONNEXION</h3>
                <hr class="loginhrColor"> 
                <div class="pl-5 pr-5">
                    <div class="form-group">
                        <label for="inputEmail" class="pl-5 pt-2">ADRESSE MAIL</label>
                        <div class="d-flex inputLogin" style="background-color:white; border-radius: 19px;">
                            <img src="{{ asset('/img/icones/iconeUserLogin.png') }}" alt="iconeUserLogin" class="my-auto p-1 m-2" style="height: 30px;">
                            <input placeholder="Saisissez votre adresse mail" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="pl-5 pt-2">MOT DE PASSE</label>
                        <div class="d-flex inputLogin input-group" id="show_hide_password" style="background-color:white; border-radius: 19px;">
                            <img src="{{ asset('/img/icones/iconePasswordLogin.png') }}" alt="iconePasswordLogin" class="my-auto p-1 m-2 pl-2" style="height: 30px;">
                            <input placeholder="Saisissez votre mot de passe" type="password" name="password" id="inputPassword" class="form-control border-right border-dark" required>
                            <div class="input-group-addon border-left border-dark p-2" >
                                <a href="" class="my-auto"><i class="fa fa-eye-slash" aria-hidden="true" style="color:black"></i></a>
                            </div>
                        </div>
                    </div>    
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="d-flex justify-content-end">
                   <a href="{{ path('app_forgotten_password') }}" class="ml-2 align-self-center pl-5">Mot de passe oubli√©</a>
                </div>
                <div class="d-flex pt-5 pb-4 buttonConnectionLogin">
                    <button class="btn btn-primary mx-auto pl-5 pr-5" type="submit" >
                            SE CONNECTER
                    </button>
                </div>
                <div class="text-center pb-4 inscrivezVousLogin">
                    <a class="">Vous n'avez pas encore de compte ? <a href="{{ path('account_register') }}"> Inscrivez vous ici</a></a>
                </div>
            </form>
        </div>
    
</div>
{% endblock %}
